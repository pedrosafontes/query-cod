{
  "compilerOptions": {
    "outDir": "build",
    "module": "esnext",
    "target": "ES2023",

    "allowJs": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "*": ["./frontend/*", "./frontend/js/*"],
      "@/*": ["./frontend/js/*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  "include": ["./frontend/**/*.ts", "./frontend/**/*.tsx"],
  "exclude": ["node_modules", "build", "frontend/**/*.js", "frontend/**/*.jsx"]
}
